{% verbatim %}
<script type="text/ng-template" id="confirm.html">
    <div class="modal-header">
        <h3 class="modal-title">{{ _config.label }}</h3>
    </div>
    <div class="modal-body">
        <div class="alert alert-danger"><h4>Confirma realizar esta operaci√≥n?</h4></div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" ng-click="submit()" ng-disabled="form.$invalid">
            <i class="fa fa-spinner fa-spin" ng-show="isLoading"></i>
            <i class="fa fa-check" ng-show="form.$valid"></i>
            Confirmar
        </button>
        <button class="btn btn-danger" ng-click="cancel()">Cancelar</button>
    </div>
</script>
{% endverbatim %}